#define HAVE_STDLIB_H 1
#define HAVE_SYS_DIR_H 1
#define HAVE_SYS_WAIT_H 1
#define HAVE_TCGETATTR 1
#define HAVE_TERMCAP_H 1
#define HAVE_TERMIOS_H 1
#define HAVE_UNISTD_H 1
#define OUTC_RETURN
#define SIGRET /*nothing*/
